<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Attach"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".ui.messages.MessagesFragment">

    <TextView
        android:id="@+id/title_messages"
        android:text="Type your email!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.011" />

    <Button
        android:id="@+id/SendEmail"
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:backgroundTint="@color/purple_500"
        android:layout_height="wrap_content"
        android:layout_marginStart="151dp"
        android:layout_marginTop="153dp"
        android:layout_marginEnd="172dp"
        android:layout_marginBottom="238dp"
        android:hint="Send"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MessageDescription" />

    <EditText
        android:id="@+id/MessageDescription"
        android:layout_width="411dp"
        android:textColorHint="@color/white"
        android:layout_height="113dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Description"
        android:inputType="textMultiLine"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MessageTitle" />

    <EditText
        android:id="@+id/Recipient"
        android:textColorHint="@color/white"
        android:layout_width="173dp"
        android:layout_height="40dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:textColor="@color/white"
        android:hint="Recipient email"
        android:inputType="textPersonName"
        android:textSize="11dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_messages" />

    <EditText
        android:id="@+id/MessageTitle"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_width="173dp"
        android:layout_height="31dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="9dp"
        android:ems="10"
        android:hint="Title"
        android:inputType="textPersonName"
        android:textSize="10dp"
        app:layout_constraintBottom_toTopOf="@+id/MessageDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Recipient" />

</androidx.constraintlayout.widget.ConstraintLayout>